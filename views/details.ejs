<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= searchData.meals[0].strMeal %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link href="/css/style.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>
</head>

<body>

    <h1 class="text-center bg-danger p-5 text-white m-0">Recipe site</h1>
    <!--Loading nav code. MUST USE - include("url") to inject the code.-->
    <%- include("partials/navbar.ejs") %>

    <main class="page container my-5">
        <div class="content">
            <div class="main">
                <img src="<%= searchData.meals[0].strMealThumb %>" alt="strMealThumb"" class="img-fluid">
                <p class="caption mt-2 muted"></p>
            </div>
            <aside class="side">
                <h3><%= searchData.meals[0].strMeal %></h3>
                <ul class="facts">
                    <li>Ingredients:</li>
                    <% for(let i=1; i<=20; i++){ 
                        let ingredient = searchData.meals[0]["strIngredient"+i];
                        let measure = searchData.meals[0]["strMeasure"+i];
                        if(ingredient && ingredient.trim() !== ""){ %>
                            <li><%= ingredient %> - <%= measure %></li>
                    <%  } 
                    } %>
                </ul>
                <p class="lead"> <%= searchData.meals[0].strInstructions %></p>
                <ul class="facts">
                    <li>Category: <%= searchData.meals[0].strCategory %></li>
                    <li>Area: <%= searchData.meals[0].strArea %></li>
                    <li>Tags: <%= searchData.meals[0].strTags %></li>
                </ul>
            </aside>
        </div>
    </main>
    <%- include("partials/footer.ejs") %>
</body>

